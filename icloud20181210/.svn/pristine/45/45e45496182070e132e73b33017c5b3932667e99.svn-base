
@keyframes cc{
	0%{opacity: 0.4;transform: scale(0.1) ;top: -500px;}
	50%{opacity: 0.4;transform: scale(0.1) rotateX(90deg);top: -50px;}
	100%{opacity: 1;transform: scale(1) rotateX(0deg);top: 0;}
}
@media only screen and (max-width: 500px) {
	.login{
		width: 95%!important;
	}
	.sr{
	padding:30px 70px!important;
    }
}
html,body{
	height:100%;
	width:100%;
	background: url(../images/tu.jpg) no-repeat center center;
	background-size:1920px 1000px;
	perspective:500px;
}
*{
		font-family:"仿宋";
		font:"微软雅黑";
}
.login{
	width:800px;
	height: 600px;
	position: relative;
	top: 0;
	margin: 5% auto;
	background:burlywood;
	border-radius: 10px;
    color: #000000;
    font-weight:bold;
    animation: cc 0s ease-in-out ;
}
.login header{
	
    padding: 10px;
    border-bottom: 1px solid #27d;
}
.login header h1{
	margin:0;
	padding:0;
	text-align: center;
    font-size: 25px;
    line-height: 40px;
    color: #000000;
    font-weight:bold;
}
.sr{
	padding:30px 90px;
}


